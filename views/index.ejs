<html>
    <head>
        <title>RedisTasks</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/cerulean/bootstrap.min.css">
        <style>
            .del:checked + span{
                color:red;
            }

            .task-list{
                list-style:none;
            }
        </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">RedisTasks</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          </ul>
        </div>
      </div>
    </nav>

    <div class="container my-5">

        <form method="post" action="/task/add">
            <label></label>
            <input type="text" name="task" placeholder="Add Task">
            <input type="submit" value="Submit">
        </form>


        <h3><%= title %></h3>

        <form method="post" action="/task/delete">
            <ul class="task-list">
            <% tasks.forEach(function(task){ %>
                <li>
                    <label>
                        <input type="checkbox" name="tasks" class="del" value="<%= task
                        %>"><span><%= task %></span>
                    </label>
                </li>
            <% }); %>
            </ul>
            <input type="submit" value="remove">
        </form>


        <div class="p-3 mb-3 bg-light border rounded">
            <h3>Next Business Call</h3>
            Name: <%= call.name %><br>
            Company: <%= call.company %><br>
            Phone: <%= call.phone %><br>
            Time: <%= call.time %><br>
        </div>

        <div class="p-3 mb-3 bg-light border rounded">
            <h3>Edit Next Call</h3>
            <form method="post" action="/call/add">
                <label>Contact name</label><br>
                <input type="text" name="name" placeholder="Task Name">
                <br><br>
                <label>Company</label><br>
                <input type="text" name="company" placeholder="Company">
                <br><br>
                <label>Phone</label><br>
                <input type="text" name="phone" placeholder="Phone">
                <br><br>
                <label>Day & Time</label><br>
                <input type="text" name="time" placeholder="Time">
                <br><br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</body>
</html>